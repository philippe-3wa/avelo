            <label class="col-sm-2 control-label" for="stock">Stock</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="stock" name="stock" placeholder="stock" required>
            </div>
        </div>

    <div class="form-group">
        <label class="col-xs-2 control-label" for="actif">Actif</label>
            <div class="col-sm-10">
              <div class="radio">
                <label>
                  <input type="radio" name="gridActif" id="gridActif1" value="1" checked>
                 Oui
                </label>
              </div>
              <div class="radio">
                <label>
                  <input type="radio" name="actif" id="gridActif2" value="0">
                 Non
                </label>
              </div>
            </div>
        </div>
    </div>
    <div class="footer">

        <input type="hidden" name="action" value="produit_add" />
        <div class="address new">
            <input type="submit" value="submit">
        </div>
    </div>
</form>

